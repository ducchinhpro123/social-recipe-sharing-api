            <div class="container-fluid">
                <div class="container mt-5">
                    <h1 class="mb-4">Update Recipe</h1>
                    <form method="POST" id="update-form" action="/admin/recipe/update">
                        <!-- Recipe ID -->
                        <div class="mb-3">
                            <label for="recipe-id" class="form-label">Recipe ID</label>
                            <input type="text" class="form-control" id="_id" name="_id" value="<%= recipe._id %>"
                                   readonly>
                        </div>

                        <!-- Title -->
                        <div class="mb-3">
                            <label for="recipe-title" class="form-label">Title</label>
                            <input type="text" class="form-control" id="recipe-title" name="title" value="<%= recipe.title %>"
                                   placeholder="Enter Title">
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label for="recipe-description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description"
                                      placeholder="Enter Description"><%= recipe.description %></textarea>
                        </div>

                        <!-- Prep Time -->
                        <div class="mb-3">
                            <label for="recipe-prepTime" class="form-label">Prep Time (minutes)</label>
                            <input type="number" class="form-control" id="recipe-prepTime" name="prepTime"
                                   value="<%= recipe.prepTime %>" placeholder="Enter Prep Time">
                        </div>

                        <!-- Cook Time -->
                        <div class="mb-3">
                            <label for="recipe-cookTime" class="form-label">Cook Time (minutes)</label>
                            <input type="number" class="form-control" id="recipe-cookTime" name="cookTime"
                                   value="<%= recipe.cookTime %>" placeholder="Enter Cook Time">
                        </div>

                        <!-- Ingredients -->
                        <div class="mb-3">
                            <label for="recipe-ingredients" class="form-label">Ingredients</label>
                            <textarea class="form-control" id="recipe-ingredients" name="ingredients"
                                      placeholder="Enter Ingredients as JSON"><%= JSON.stringify(recipe.ingredients) %></textarea>
                            <small class="form-text text-muted">Example: [{"name":"Pasta", "amount":200,
                                "unit":"g"}]</small>
                        </div>

                        <!-- Instructions -->
                        <div class="mb-3">
                            <label for="recipe-instructions" class="form-label">Instructions</label>
                            <textarea class="form-control" id="recipe-instructions" name="instructions"
                                      placeholder="Enter Instructions, one per line"><%= recipe.instructions.join('\n') %></textarea>
                        </div>

                        <!-- Difficulty -->
                        <div class="mb-3">
                            <label for="recipe-difficulty" class="form-label">Difficulty</label>
                            <select class="form-select" id="recipe-difficulty" name="difficulty">
                                <option value="Easy" <%= recipe.difficulty === 'Easy' ? 'selected' : '' %>>Easy
                                </option>
                                <option value="Medium" <%= recipe.difficulty === 'Medium' ? 'selected' : '' %>>
                                    Medium
                                </option>
                                <option value="Hard" <%= recipe.difficulty === 'Hard' ? 'selected' : '' %>>Hard
                                </option>
                            </select>
                        </div>

                        <!-- Categories -->
                        <div class="mb-3">
                            <label for="recipe-category" class="form-label">Category</label>
                            <input type="text" class="form-control" id="recipe-category" name="category"
                                   value="<%= recipe.category.join(', ') %>"
                                   placeholder="Enter Categories (comma-separated)">
                        </div>

                        <button id="update-button" class="btn btn-primary" type="submit">Update Recipe</button>
                    </form>

                    <div id="response-message" class="mt-3"></div>
                </div>

